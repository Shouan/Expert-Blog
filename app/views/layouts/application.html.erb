<!DOCTYPE html>
<html>
  <head>
    <title>Expert Blog - <%= yield(:title)%></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

  <body>
    <header class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <nav>
            <ul class="nav pull-left">
              <li><%= link_to "Home",    root_path %></li>
              <li><%= link_to "View Experts",  experts_path %></li>
			  <li><%= link_to "About us",    index_about_page_path %></li>
              <li><%= link_to "Sign up", new_expert_path %></li>
            </ul>
			<ul class="nav pull-right">
          <% if signed_in? %>
            
                <li><%= link_to "Profile", current_expert %></li>
                <li><%= link_to "Settings", edit_expert_path(current_expert) %></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>

            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
			</ul>
      </nav>
        </div>
      </div>
    </header>

    <div class="container">
		<% flash.each do |key, value| %>
		  <div class="alert alert-<%= key %>"><%= value %></div>
		<% end %> 
      <%= yield %>
    </div>

	<footer class="footer">
	  <hr/>
	  <div class="container">
		<small>
		<a href="http://ExpertFinder.org/">Expert Finder</a>
		by Shovan B. Swartz
		</small>
	  </div>
	</footer>
	<br/>
	<%= debug(params) if Rails.env.development? %>

  </body>
</html>